<div class="portfolio">

    <div class="col-8 offset-2">
        <div class="jumbotron nes-container is-rounded text-center m-3" id="userPort" style="background-color: white">
            <h1 id="userDisplay">{{user.name}}</h1>
            <h3 id="userMoney">${{balance}}</h3>
        </div>
        <div class="card nes-container is-rounded m-3">
            <div class="card-body">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                            class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active" data-bs-interval="1000000">
                            <canvas id="myChart" style="width:100%;max-width:700px"></canvas>
                        </div>
                        <div class="carousel-item" data-bs-interval="1000000">
                            <canvas id="myChart2" style="width:100%;max-width:700px"></canvas>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>  
        </div>
    </div>
</div>

<script src="./js/charts.js"></script>