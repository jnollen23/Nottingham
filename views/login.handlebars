<div class="login">
    <div class="large-brand">
        Nottingham
    </div>
    {{#each watchlist as |stock|}}
    <div class="card">
        <div class="card-header">{{stock.name}}</div>
        <div class="card-body">{{stock.price}}</div>
    </div>
    {{/each}}
</div>

<h1 class="pageTitle">TEST LOGIN PAGE</h1>

<form class="login-form">
    <h2>Login</h2>
  <div class="container">
    <label for="eMail"><b>Email</b></label>
    <input type="text" placeholder="Enter Email" id="login-email"/>

    <label for="passWord"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" id="login-password"/>

    <button type="submit">Login</button>   
  </div>  
</form>

<form class="signup-form">
  <h2>Sign Up</h2>
  <div class="container">
    <label for="signup-name"><b>Enter Your Name</b></label>
    <input type="text" placeholder="Enter your name" id="signup-name"/>

    <label for="eMail"><b>Enter New Email</b></label>
    <input type="text" placeholder="Enter Email" id="signup-email"/>

    <label for="passWord"><b>Enter New Password</b></label>
    <input type="password" placeholder="Create Password" id="signup-password"/>

    <button type="submit">Sign Up</button>    
  </div>
</form>

<script src="./js/login.js"></script>